    }
    .button-container {
      margin-bottom: 30px;
      text-align: center;
    }
    .button {
      display: inline-block;
      background-color: #4CAF50; /* Verde */
      color: #ffffff !important;
      padding: 15px 30px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }
    .button:hover {
      background-color: #367c39;
    }
    .footer {
      font-size: 14px;
      color: #757575;
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class='container'>
    {{#if company.logoUrl}}
