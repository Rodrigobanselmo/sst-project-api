{
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "strict": false,
    //
    // Performance optimizations
    "skipLibCheck": true, // Skip type checking of declaration files - HUGE performance boost
    "skipDefaultLibCheck": true, // Skip type checking of default library declaration files
    "types": ["node", "express"], // Include node and express types
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": false, // Disable declaration files generation - MAJOR performance boost
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*", "test/*"],
      "@v2": ["src/@v2/*"]
    },
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false, // Disable source maps for faster builds (enable for debugging)
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "incremental": true, // Use incremental compilation
    "tsBuildInfoFile": "./dist/.tsbuildinfo", // Store build info for faster rebuilds
    "noErrorTruncation": true,
    "lib": ["ES2021", "dom", "esnext"],
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    // Additional performance optimizations
    "assumeChangesOnlyAffectDirectDependencies": true // Faster incremental builds
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "test", "coverage", "tmp", "upload", "pdf", "images", "cert", "terraform", "docs"]
}
